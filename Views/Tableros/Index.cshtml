@model List<ListarTablerosVM>

<h1>Lista de Tableros</h1>
@if(Model.Count>0){
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tablero in Model){
                <tr>
                    <td>@tablero.id</td>
                    <td>@tablero.nombre</td>
                    <td>@tablero.descripcion</td>
                    <td>
                        <a asp-controller="Tableros" asp-action="ModificarTablero" asp-route-id="@tablero.id" class="btn btn-secondary">Modificar</a>
                        <a asp-controller="Usuarios" asp-action="EliminarTablero" asp-route-id="@tablero.id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <h2 class="text-center text-muted">SIN TABLEROS</h2>
}
<div class="text-center">
    <a asp-controller="Clientes" asp-action="AltaTablero" class="btn btn-primary">Agregar Tablero</a>
</div>