@model CrearTableroVM

<form asp-action="CrearTablero" method="post" class="form"> <!-- Formulario para crear un tablero. -->
    <input type="hidden" asp-for="idUsuarioPropietario" value="@Model.idUsuarioPropietario">
    <div class="form-group">
        <label asp-for="nombre" class="form-label">Nombre</label>
        <input asp-for="nombre" class="form-control"/>
        <span asp-validation-for="nombre" class="text-danger"></span> <!-- Validacion para nombre. -->
    </div>
    <div class="form-group">
        <label asp-for="descripcion" class="form-label">Descripci√≥n</label>
        <input asp-for="descripcion" type="text" class="form-control"/>
        <span asp-validation-for="descripcion" class="text-danger"></span> <!-- Validacion para descripcion. -->
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Tablero</button>
        <a asp-controller="Tablero" asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}