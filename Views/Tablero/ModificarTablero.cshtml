@model ModificarTableroVM

<h3 class="text-center">Modificar Tablero n° @Model.id</h3>
<form asp-controller="Tablero" asp-action="Modificar" class="form">
    <input type="hidden" asp-for="id" value="@Model.id">
    <div class="form-group">
        <label asp-for="idUsuarioPropietario" class="form-label">Usuario Propietario</label>
        <select asp-for="idUsuarioPropietario" class="form-select" value="@Model.idUsuarioPropietario">
            @foreach (var usuario in (IEnumerable<SelectListItem>)ViewData["Usuarios"])
            {
                <option value="@usuario.Value">@usuario.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="nombre">Nombre</label>
        <input asp-for="nombre" value="@Model.nombre" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="descripcion">Descripción</label>
        <input asp-for="descripcion" value="@Model.descripcion" class="form-control" required>
    </div>
    <div class=" mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>