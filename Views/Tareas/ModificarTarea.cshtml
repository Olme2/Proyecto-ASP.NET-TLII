@model ModificarTareaVM

<h3 class="text-center">Modificar Tarea n° @Model.id</h3>
<form asp-controller="Usuarios" asp-action="Modificar" class="form">
    <input type="hidden" asp-for="id" value="@Model.id">
    <div class="form-group">
        <label asp-for="nombre">Nombre</label>
        <input asp-for="nombre" value="@Model.nombre" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="descripcion">Descripción</label>
        <input asp-for="descripcion" value="@Model.descripcion" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="color" class="form-label">Color</label>
        <input asp-for="color" value="@Model.color" type="color" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="estado" class="form-label">Estado</label>
        <select asp-for="estado" value="@Model.estado" class="form-select">
            @foreach (var estado in Enum.GetValues(typeof(Tareas.EstadoTarea)))
            {
                <option value="@estado">@estado</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="idUsuarioAsignado" class="form-label">Usuario Asignado</label>
        <select asp-for="estado" value="@Model.idUsuarioAsignado" class="form-select">
            @foreach (var id in Enum.GetValues(typeof(Tareas.EstadoTarea)))
            {
                <option value="@estado">@estado</option>
            }
        </select>
    </div>
    <div class=" mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>