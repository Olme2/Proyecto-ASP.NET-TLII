@model ModificarUsuarioVM

<h3 class="text-center">Modificar Usuario n° @Model.id</h3>
<form asp-controller="Usuarios" asp-action="Modificar" class="form">
    <input type="hidden" asp-for="id" value="@Model.id">
    <div class="form-group">
        <label asp-for="nombreDeUsuario">Nombre</label>
        <input asp-for="nombreDeUsuario" value="@Model.nombreDeUsuario" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="password">Contraseña</label>
        <input asp-for="password" value="@Model.password" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="rolUsuario" class="form-label">Rol</label>
        <select asp-for="rolUsuario" class="form-select" value="@Model.rolUsuario">
            @foreach (var nivel in Enum.GetValues(typeof(Usuarios.Rol)))
            {
                <option value="@nivel">@nivel</option>
            }
        </select>
    </div>
    <div class=" mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>