@model List<ListarTareasVM>

<h1>Lista de Tareas Asignadas</h1>
@if(Model.Count>0){
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var tarea in Model){
                <div style="background-color: @tarea.color;">
                <tr>
                    <td>@tarea.id</td>
                    <td>@tarea.nombre</td>
                    <td>@tarea.descripcion</td>
                    <td>@tarea.estado</td>
                    <td>
                        <a asp-controller="Tareas" asp-action="ModificarTarea" asp-route-id="@tarea.id" class="btn btn-secondary">Modificar</a>
                    </td>
                </tr>
                </div>
            }
        </tbody>
    </table>
}else{
    <h2 class="text-center text-muted">SIN TAREAS</h2>
}