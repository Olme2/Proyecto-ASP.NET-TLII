@model CambiarPasswordVM

<h1 class="text-center">Cambiar Contraseña del usuario @Model.nombreDeUsuario</h1>

<div class="d-flex justify-content-center">

    <!-- Formulario para cambiar label contraseña. -->
    <form method="post" asp-action="Cambiar" class="w-50"> 

        <input type="hidden" asp-for="id" value="@Model.id">
        
        <div class="form-group">
        
            <label asp-for="password" class="form-label">Nueva Contraseña:</label>
            <input type="password" class="form-control" asp-for="password">
            <span asp-validation-for="password" class="text-danger"></span> <!-- Validación para contraseña. -->
        
        </div>
        
        <div class="mt-3">
        
            <button type="submit" class="btn btn-success">Cambiar Contraseña</button>
            <a asp-action="Index" class="btn btn-danger">Volver</a>
        
        </div>
    
    </form>
    
</div>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}