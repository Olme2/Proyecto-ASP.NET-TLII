@model ModificarUsuarioVM

<h3 class="text-center">Modificar Usuario "@Model.nombreDeUsuario"</h3>

<!-- Formulario para modificar un usuario. -->
<form asp-controller="Usuarios" asp-action="Modificar" class="form"> 

    <input type="hidden" asp-for="id" value="@Model.id">

    <div class="form-group">

        <label asp-for="nombreDeUsuario">Nombre</label>
        <input asp-for="nombreDeUsuario" value="@Model.nombreDeUsuario" class="form-control">
        <span asp-validation-for="nombreDeUsuario" class="text-danger"></span> <!-- Validación para nombre de usuario. -->

    </div>

    <div class="form-group">

        <label asp-for="rolUsuario" class="form-label">Rol</label>
        <select asp-for="rolUsuario" class="form-select" value="@Model.rolUsuario">

            @foreach (var nivel in Enum.GetValues(typeof(Usuarios.Rol)))
            {
                <option value="@nivel">@nivel</option>
            }

        </select>
        <span asp-validation-for="rolUsuario" class="text-danger"></span> <!-- Validación para rol de usuario. -->

    </div>

    <div class=" mt-3">

        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>

    </div>

</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}