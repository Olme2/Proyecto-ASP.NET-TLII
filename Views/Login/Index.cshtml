@model LoginVM
@{
    var mensaje = TempData["Mensaje"];
}

<h1 class="text-center">Login</h1>
<h3 class="text-center">Iniciar Sesión</h3>
<div class="d-flex justify-content-center">
    <form method="post" asp-action="Login" class="w-50">
        <div class="form-group">
            <label asp-for="nombreDeUsuario" class="form-label">Usuario:</label>
            <input class="form-control" asp-for="nombreDeUsuario" value="@Model.nombreDeUsuario" required>
        </div>
        <div class="form-group">
            <label asp-for="password" class="form-label">Contraseña:</label>
            <input type="password" class="form-control" asp-for="password" required>
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        @if(@Model.error=="Contraseña incorrecta"){ 
            <a asp-action="CambiarPassword" asp-route-id="@Model.id" class="text-decoration-none">¿Olvidó su contraseña?</a>
        }
        </div>
        @if(mensaje!=null){
            <div class="alert alert-succes" role="alert">@mensaje</div>
        }
    @if(!string.IsNullOrEmpty(Model.error)){
        <div class="alert alert-danger mt-3" role="alert">@Model.error</div>
    }
    </form>
</div>
